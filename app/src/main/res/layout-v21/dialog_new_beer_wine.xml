<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:padding="20dp"
            android:layout_weight="2"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nameOptional"/>

        <EditText
            android:layout_weight="1"
            android:id="@+id/beerWineName"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:layout_weight="2"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/quantity"
            android:layout_gravity="center"
            android:padding="20dp"/>

        <NumberPicker
            android:id="@+id/beerWineQuantityPicker"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:theme="@style/NumberPickerText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:padding="20dp"
            android:layout_weight="2"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/unit"/>

        <Spinner
            android:layout_weight="1"
            android:id="@+id/beerWineUnitSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:padding="20dp"
            android:layout_weight="2"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/alcohol_degrees"/>

        <NumberPicker
            android:layout_weight="1"
            android:id="@+id/beerWineDegreePicker"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:theme="@style/NumberPickerText"/>

    </LinearLayout>
    
    
    
    <DatePicker
        android:id="@+id/beerWineDatePicker"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

</LinearLayout>
</ScrollView>